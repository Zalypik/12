a[8]:=    35           ;
a[9]:=    -45           ;
a[10]:=  -11            ;

for i:=1 to 10 do
    begin
Memo1.Lines.Add(FloatToStr(a[i]));
if a[i]<=0 then
   begin
   sum:= a[i]+sum ;
   end;
end;
Label1.Caption:= 'sum='+ floattostr(sum);
end;        


internal class Program
    {
        static void Main(string[] args)
